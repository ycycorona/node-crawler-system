{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./@types",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "compileOnSave": true,
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "@types"
  ]
}
